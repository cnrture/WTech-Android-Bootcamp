<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WTechDesignforEveryone" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/arkaPlan</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        //Default TextView Style değiştirdik.
        <!--<item name="android:textViewStyle">@style/bigText</item>-->

    </style>

    <style name="switchButtonTheme">

        <item name="colorControlActivated">@color/baslikYazi</item>

    </style>

    <style name="bigText" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="android:textColor">@color/baslikYazi</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>

    </style>

</resources>